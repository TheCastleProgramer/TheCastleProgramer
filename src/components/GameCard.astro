---
const { href, titulo, logo, descripcion } = Astro.props;
---

<li class="link-card">
    <a href={href}>
        <div class="card-image">
            <img src={logo} alt={`${titulo} logo`} class="card-logo" height="120" width="120"/>
        </div>
        <div class="card-content">
            <h2 class="card-title">{titulo}</h2>
            <p class="card-description">{descripcion}</p>
            <p class="link-card center">Download</p>
        </div>
    </a>
</li>

<style>
    .center{
        display: flex;
        text-align: center;
    }
    .link-card {

        list-style: none;
        display: flex;
        flex-direction: column;
        padding: 1px;
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        width: 100%;
        max-width: 400px; /* Ajusta el tamaño máximo según tus necesidades */
    }

    .link-card > a {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
        border-radius: 7px;
    }

    .card-image {
        width: 100%;
        height: 200px; /* Ajusta la altura según tus necesidades */
        overflow: hidden;
        border-bottom: 1px solid #333;
    }

    .card-logo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-content {
        padding: 1rem;
    }

    .card-title {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .card-description {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }

    .link-card:is(:hover, :focus-within) .card-title {
        color: rgb(var(--accent-light));
    }
</style>
